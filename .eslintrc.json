{
  "env": {
    "jest": true
  },
  "extends": [
    "react-app",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest"
  },
  "plugins": [
    "react",
    "import",
    "prettier",
    "simple-import-sort"
  ],
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 100,
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true
      }
    ],
    "simple-import-sort/imports": [
      "warn",
      {
        "groups": [
          [
            "^react",
            "^layouts",
            "^pages",
            "^components",
            "^\\u0000",
            "^@?\\w",
            "^[^.]",
            "^hoc",
            "^hooks",
            "^routers",
            "^store",
            "^services",
            "^helpers",
            "^utils",
            "^urls",
            "^types",
            "^assets",
            "^.+\\.s?css$"
          ]
        ]
      }
    ]
  }
}
